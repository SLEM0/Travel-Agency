<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.Registration"
             Title="Регистрация">
    <NavigationPage.TitleView>
        <StackLayout BackgroundColor="#E85021" />
    </NavigationPage.TitleView>
    <VerticalStackLayout>
        <Label Text="Email" />
        <Entry x:Name="Email" Placeholder="ivanov@gmail.com" Keyboard="Email"/>
        <Label Text="Фамилия" />
        <Entry x:Name="LastName" Placeholder="Иван"/>
        <Label Text="Имя" />
        <Entry x:Name="FirstName" Placeholder="Иванов"/>
        <Label Text="Пароль" />
        <Entry x:Name="Password" Placeholder="12345678"/>
        <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021"/>
    </VerticalStackLayout>
</ContentPage>