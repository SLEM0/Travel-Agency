<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.ClientChangePassword"
             Title="Изменить пароль">
    <Grid>
        <VerticalStackLayout>
        <Label Text="Старый пароль" FontSize="Large"/>
        <Entry x:Name="Old" FontSize="Large" IsPassword="True"/>
        <Label Text="Новый пароль" FontSize="Large"/>
        <Entry x:Name="New" FontSize="Large" IsPassword="True"/>
    </VerticalStackLayout>
        <VerticalStackLayout VerticalOptions="End">
        <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021" TextColor="White" FontSize="Large" Margin="25"/>
    </VerticalStackLayout>
    </Grid>
</ContentPage>