<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.AddReview"
             Title="Добавить отзыв">
    <VerticalStackLayout>
        <Picker x:Name="ratingPicker" Title="Оцените тур" ItemsSource="{Binding Lst5}"/>
        <Label Text="Расскажите о туре" />
        <Entry x:Name="Text"/>
        <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>