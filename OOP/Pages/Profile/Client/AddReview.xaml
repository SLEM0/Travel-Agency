<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.AddReview"
             Title="Добавить отзыв">
    <Grid>
        <VerticalStackLayout>
            <Picker x:Name="ratingPicker" Title="Оцените тур" ItemsSource="{Binding Lst5}" FontSize="Large"/>
            <Editor HeightRequest="190" x:Name="Text" FontSize="Large" Placeholder="Расскажите о туре"/>
    </VerticalStackLayout>
        <VerticalStackLayout VerticalOptions="End">
        <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021" TextColor="White" FontSize="Large" Margin="25"/>
    </VerticalStackLayout>
    </Grid>
</ContentPage>