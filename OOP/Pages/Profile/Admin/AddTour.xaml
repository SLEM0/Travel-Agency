<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.AddTour"
             Title="Добавить тур">
    <VerticalStackLayout>
        <Picker x:Name="hotelPicker" Title="Отель"  ItemsSource="{Binding Hotels}" SelectedItem="{Binding MyHotel}" ItemDisplayBinding="{Binding Name}"/>
        <Picker x:Name="eatPicker" Title="Пиатние" ItemsSource="{Binding Eat}"/>
        <Picker x:Name="roomPicker" Title="Комната" ItemsSource="{Binding Rooms}" ItemDisplayBinding="{Binding Name}"/>
        <Label Text="Дата вылета" />
        <DatePicker x:Name="beginDate"/>
        <Label Text="Дата прилета" />
        <DatePicker x:Name="endDate"/>
        <Label Text="Место отправления" />
        <Entry x:Name="departure"/>
        <Label Text="Количество мест" />
        <Entry x:Name="plases"/>
        <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>