<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.AddReply"
             Title="Добавить отзыв">
    <Grid>
        <VerticalStackLayout>
            <Editor HeightRequest="190" x:Name="Text" FontSize="Large" Placeholder="Напишите ответ"/>
        </VerticalStackLayout>
        <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021" TextColor="White" FontSize="Large" Margin="25" VerticalOptions="End"/>
    </Grid>
</ContentPage>