<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.EditRoom"
             Title="Изменить информацию о комнате">
    <Grid>
        <VerticalStackLayout>
            <Entry Text ="{Binding MyRoom.Name}" x:Name="Name" FontSize="Large" Placeholder="Название"/>
            <Picker x:Name="peaplePicker" Title="Количество мест" ItemsSource="{Binding Lst5}" FontSize="Large"/>
        </VerticalStackLayout>
        <VerticalStackLayout VerticalOptions="End">
            <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021" TextColor="White" Margin="10" FontSize="Large"/>
            <Button Text="Удалить" Clicked="Remove_Button_Clicked"
                BorderColor ="White"
                BackgroundColor="#1c1c1c"
                TextColor="White" Margin="10" FontSize="Large"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>