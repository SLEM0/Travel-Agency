<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.AddRoom"
             Title="Добавить комнату">
    <Grid>
        <VerticalStackLayout>
            <Entry x:Name="Name" FontSize="Large" Placeholder="Название"/>
            <Picker x:Name="peaplePicker" Title="Количество мест" ItemsSource="{Binding Lst5}" FontSize="Large"/>
        
    </VerticalStackLayout >
        <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021" VerticalOptions="EndAndExpand" TextColor="White" Margin="25" FontSize="Large"/>
    </Grid>
</ContentPage>