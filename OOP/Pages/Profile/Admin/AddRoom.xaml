<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.AddRoom"
             Title="Добавить комнату">
    <VerticalStackLayout>
        <Label Text="Название" />
        <Entry x:Name="Name"/>
        <Picker x:Name="peaplePicker" Title="Количество мест" ItemsSource="{Binding Lst5}"/>
        <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>