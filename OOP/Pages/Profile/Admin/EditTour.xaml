<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.EditTour"
             Title="Изменить информацию о туре">
    <VerticalStackLayout>
        <Picker x:Name="hotelPicker" Title="Отель"  ItemsSource="{Binding Hotels}" SelectedItem="{Binding MyTour.Hotel}" ItemDisplayBinding="{Binding Name}"/>
        <Picker x:Name="eatPicker" Title="Пиатние" ItemsSource="{Binding Eat}" SelectedItem="{Binding MyTour.Eat}"/>
        <Picker x:Name="roomPicker" Title="Комната" ItemsSource="{Binding Rooms}" SelectedItem="{Binding MyTour.Room}" ItemDisplayBinding="{Binding Name}"/>
        <Label Text="Дата вылета" />
        <DatePicker x:Name="beginDate"/>
        <Label Text="Дата прилета" />
        <DatePicker x:Name="endDate" />
        <Label Text="Место отправления" />
        <Entry x:Name="departure" Text="{Binding MDeparture}"/>
        <Label Text="Количество мест" />
        <Entry x:Name="plases" Text="{Binding MPlases}"/>
        <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021" TextColor="White"/>
        <Button Text="Удалить"
                Clicked="Remove_Button_Clicked"
                BorderColor ="White"
                BackgroundColor="#1c1c1c"
                TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>