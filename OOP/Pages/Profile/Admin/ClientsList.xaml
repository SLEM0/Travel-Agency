<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.ClientsList"
             Title="Список клиентов">
    <ListView x:Name="listview" ItemsSource="{Binding Clients}" RowHeight="130">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.View>
                        <Border Stroke="Gray" Margin="5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20" />
                            </Border.StrokeShape>
                            <VerticalStackLayout BackgroundColor ="#1c1c1c" Padding="5">
                                <Label Text="{Binding LastName}" FontSize="Large"/>
                                <Label Text="{Binding FirstName}" FontSize="Large" />
                                <Label Text="{Binding Login}" FontSize="Body" />
                            </VerticalStackLayout>
                        </Border>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
