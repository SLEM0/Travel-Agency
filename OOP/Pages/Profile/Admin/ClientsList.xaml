<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.ClientsList"
             Title="Список клиентов">
    <ListView x:Name="listview" ItemsSource="{Binding Clients}" RowHeight="120">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.View>
                        <StackLayout>
                            <Label Text="{Binding LastName}" FontSize="16" />
                            <Label Text="{Binding FirstName}" FontSize="16" />
                            <Label Text="{Binding Email}" FontSize="14" />
                        </StackLayout>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>