<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.HotelList"
             Title="Список отелей">
    <VerticalStackLayout>
        <ListView x:Name="listview" ItemsSource="{Binding Hotels}" ItemTapped="ListView_ItemTapped" RowHeight="120">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="18" />
                                <Label Text="{Binding Category}" FontSize="14" />
                                <Label Text="{Binding Country}" FontSize="14" />
                                <Label Text="{Binding Curort}" FontSize="14" />
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Добавить отель" Clicked="Add_Hotel_Button_Clicked" BackgroundColor="#E85021" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>