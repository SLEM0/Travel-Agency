<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP.EntryPage"
             Title="Вход">
    <NavigationPage.TitleView>
        <StackLayout BackgroundColor="#E85021" />
    </NavigationPage.TitleView>
    <Grid>
        <VerticalStackLayout>
        <Label Text="Email" FontSize="Large"/>
        <Entry x:Name="Email" Keyboard="Email" FontSize="Large"/>
        <Label Text="Пароль" FontSize="Large" />
            <Entry x:Name="Password" FontSize="Large" IsPassword="True"/>
        </VerticalStackLayout>
        <VerticalStackLayout VerticalOptions="End">
            <Button Text="Ок" Clicked="Ok_Button_Clicked" BackgroundColor="#E85021" TextColor="White" Margin="25" FontSize="Large"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>