<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OOP"
             x:Class="OOP.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="CustomNavigationStyle" TargetType="NavigationPage">
                <Setter Property="TitleView">
                    <Setter.Value>
                        <StackLayout BackgroundColor="#E85021" />
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
